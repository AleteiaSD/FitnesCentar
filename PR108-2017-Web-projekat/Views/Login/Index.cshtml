
@{
    ViewBag.Title = "Index";
}
<h2>Uloguj se</h2>

<form method="post" action="~/Login/Index" autocomplete="on">
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label for="username" class="control-label col-md-2">Korisnicko ime</label>
            <div class="col-md-10">
                <input type="text" name="korisnickoime" value="@Model.KorisnickoIme" class="form-control" />
                <p>@ViewBag.UsernameError</p>
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="control-label col-md-2">Lozinka</label>
            <div class="col-md-10">
                <input type="password" name="lozinka" class="form-control" />
                <p>@ViewBag.PasswordError</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Uloguj se" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>