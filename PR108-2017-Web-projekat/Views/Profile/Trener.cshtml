@using PR108_2017_Web_projekat.Models.Konstruktori;
@model IEnumerable<GrupniTrening>
@{
    ViewBag.Title = "Trener";
}
<div class="row">
    <a class="col-lg-2" style="float:right" href="~/Profile/Izmeni">Izmeni</a>
    <a class="col-lg-2" style="float:right" href="~/GrupniTrening/KreirajGrupniTrening">Kreiraj grupni trening</a>
    <a class="col-lg-2" style="float:right" style="margin-left:15px;color:red" href="~/Profile/ProsliTreninziTrenera">Prosli treninzi trenera</a>
</div>
<h2>Informacije o treneru @ViewBag.Model.Ime</h2>

<table class="dl-horizontal" border="1">
    <tr>
        <th align="center">Ime</th>
        <th align="center">Prezime</th>
        <th align="center">Korisnicko ime</th>
        <th align="center">Uloga</th>
    </tr>
    <tr>
        <td align="center">@ViewBag.Model.Ime</td>
        <td align="center">@ViewBag.Model.Prezime</td>
        <td align="center">@ViewBag.Model.KorisnickoIme</td>
        <td align="center">@ViewBag.Model.Uloga</td>
    </tr>
</table>
<h2>Buduci treninzi</h2>
<table class="ListTable" border="1">
    <tr>
        <th align="center">Naziv treninga</th>
        <th align="center">Fitnes centar</th>
        <th align="center">Tip treninga</th>
        <th align="center">Trajanje</th>
        <th align="center">Datum i vreme</th>
        <th align="center">Trentni broj posetilaca</th>
        <th align="center">Maksimalan broj posetilaca</th>
        <th align="center">Posetioci</th>
        <th align="center">Izmeni</th>
        <th align="center">Obrisi</th>

    </tr>
    @foreach (var temp in Model)
    {
        <tr>
            <td align="center">@temp.Naziv</td>
            <td align="center">@temp.FitnesCentarGdeSeOdrzavaTrening</td>
            <td align="center">@temp.TipTreninga</td>
            <td align="center">@temp.TrajanjeTreninga</td>
            <td align="center">@temp.DatumIVremeTreninga</td>
            <td align="center">@temp.TrentniBrojPosetilaca</td>
            <td align="center">@temp.MaksimalanBrojPosetilaca</td>
            <td align="center"><a href="~/GrupniTrening/Posetioci?fc=@temp.FitnesCentarGdeSeOdrzavaTrening&trening=@temp.Naziv">Pogledaj</a></td>
            <td align="center"><a href="~/GrupniTrening/IzmeniTrening?fc=@temp.FitnesCentarGdeSeOdrzavaTrening&ime=@temp.Naziv">Izmeni</a></td>
            @if (temp.TrentniBrojPosetilaca > 0)
            {
                <td align="center">
                    Ima posetioca na treningu
                </td>
            }
            else
            {
                <td align="center"><a href="~/GrupniTrening/ObrisiTrening?fc=@temp.FitnesCentarGdeSeOdrzavaTrening&ime=@temp.Naziv">Obrisi</a></td>
            }
        </tr>
    }
</table>

